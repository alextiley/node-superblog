extends /layouts/login

block title
	title Login | Admin

block content

	form(action="/admin/login" method="POST" class="jumbotron")
		
		h1 Sign In

		legend.lead Please sign in to manage your site:

		include /partials/global/flash

		label(for="username") Username
		input(type="text" name="username" id="username" class="form-control" placeholder="johnsmith")

		label(for="password") Password
		input(type="password" name="password" id="password" class="form-control")

		input(type="checkbox" name="remember" id="remember_me")
		label(for="remember_me" style="margin:15px 0 15px 5px") Remember me

		button(type="submit" class="btn btn-lg btn-success btn-block") Sign In